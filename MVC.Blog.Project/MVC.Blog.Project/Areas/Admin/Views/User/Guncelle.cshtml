@model MVC.Blog.DAL.Model.UserUpdateModel

<div class="kt-mainpanel">
    <div class="kt-pagetitle">
        <h5>Profil Düzenle</h5>
    </div><!-- kt-pagetitle -->


    @using (Html.BeginForm("Guncelle", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
        @Html.AntiForgeryToken()
        <div class="kt-pagebody">
            <div class="row">
                <div class="col-md-4 col-lg-3">
                    <label class="content-left-label">Profil Fotoğrafı</label>
                    <figure class="edit-profile-photo">
                        <img src="@Model.Kullanici.ProfilPic" class="img-fluid" alt="" id="profilePicImg">
                        <input type="file" id="profilPic" name="profilPic" class="img-fluid" accept="image/jpeg" />
                    </figure>
                    @*<button class="btn btn-outline-success btn-block mg-b-10" id="uploadImg">Yükle</button>*@
                </div><!-- col-3 -->

                <div class="col-md-8">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Kullanici.ProfilPic)
                        @Html.HiddenFor(x => x.Kullanici.Id)
                        <div class="form-group">
                            <label class="control-label col-md-2">Ad:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Kullanici.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Soyad:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Kullanici.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">E-posta:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Kullanici.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Şifre:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Kullanici.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Şifreyi Doğrula:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Kullanici.PasswordConfirm, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.PasswordConfirm, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Onaylandı mı?</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Kullanici.IsAccepted)
                                    @Html.ValidationMessageFor(model => model.Kullanici.IsAccepted, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Kod:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Kullanici.Kod, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Kullanici.Kod, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Rol:</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(x => x.Kullanici.RoleId, new SelectList(ViewBag.Roller, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-outline-primary btn-block mg-b-10" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

