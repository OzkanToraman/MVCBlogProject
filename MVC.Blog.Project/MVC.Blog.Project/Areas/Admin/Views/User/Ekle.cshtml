
@using MVC.Blog.DAL.Data
@model Kullanici



<div class="kt-mainpanel">
    <div class="kt-pagetitle">
        <h5>Profil Düzenle</h5>
    </div><!-- kt-pagetitle -->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="kt-pagebody">
            @if (ViewBag.Msg != null)
            {
                <span class="alert alert-danger">@ViewBag.Msg</span>
            }
            <div class="row">
                <div class="col-md-4 col-lg-3">
                    <label class="content-left-label">Profil Fotoğrafı</label>
                    <figure class="edit-profile-photo">
                        <img src="/Media/Images/c3c5c1df-0964-4c38-820e-7412187c7117.jpg" class="img-fluid" alt="">
                        <figcaption>
                            <a class="btn btn-dark">Fotoğrafı düzenle</a>
                        </figcaption>
                    </figure>

                </div><!-- col-3 -->
                <div class="col-md-8 col-lg-9 mg-t-30 mg-md-t-0">
                    <label class="content-left-label">Giriş Bilgileri</label>
                    <div class="card bg-gray-200 bd-0">
                        <div class="edit-profile-form">
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">E-mail: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 col-xl-6 mg-t-10 mg-sm-t-0">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
                                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Şifre: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 col-xl-6 mg-t-10 mg-sm-t-0">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                                </div>
                            </div>
                        </div><!-- wd-60p -->
                    </div><!-- card -->
                    <hr class="invisible">
                    <label class="content-left-label">Kişisel Bilgiler</label>
                    <div class="card bg-gray-200 bd-0">
                        <div class="edit-profile-form">
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Ad:<span class="tx-danger">*</span></label>
                                <div class="col-sm-8 col-xl-6 mg-t-10 mg-sm-t-0">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @type = "text", @placeholder = "Ad giriniz" })
                                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
                                </div>
                            </div><!-- form-group -->
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Soyad:<span class="tx-danger">*</span></label>
                                <div class="col-sm-8 col-xl-6 mg-t-10 mg-sm-t-0">
                                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @type = "text", @placeholder = "Soyad giriniz" })
                                    <span class="text-danger">@Html.ValidationMessageFor(x => x.LastName)</span>
                                </div>
                            </div><!-- form-group -->
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Rol:<span class="tx-danger">*</span></label>
                                <div class="col-sm-8 col-xl-6 mg-t-10 mg-sm-t-0">
                                    @Html.DropDownListFor(x => x.RoleId, new SelectList(ViewBag.Roller, "Value", "Text"), "Rol Seçiniz", new { @class = "form-control" })
                                </div>
                            </div><!-- form-group -->
                            <div class="form-group row mg-b-0">
                                <label class="col-sm-3 form-control-label">Hakkımda:</label>
                                <div class="col-sm-9 col-xl-8 mg-t-10 mg-sm-t-0">
                                    @Html.TextAreaFor(x => x.Hakkimda, new { @class = "form-control", @type = "text", @placeholder = "Kendiniz hakkında..." })
                                </div>
                            </div><!-- form-group -->
                        </div><!-- wd-60p -->
                    </div><!-- card -->
                    <hr class="invisible">

                    <input type="submit" value="Ekle" class="btn btn-default btn-block" />

                </div><!-- col-9 -->
            </div><!-- row -->
        </div><!-- kt-pagebody -->
    }
</div><!-- kt-mainpanel -->