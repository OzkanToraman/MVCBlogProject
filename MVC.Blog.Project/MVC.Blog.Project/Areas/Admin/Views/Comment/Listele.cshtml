@model IEnumerable<MVC.Blog.DAL.Data.Comments>

<div class="kt-mainpanel">
    <div class="kt-pagetitle">
        <h5>Yorumları Listele</h5>
    </div><!-- kt-pagetitle -->
    <div class="kt-pagebody">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">KATEGORİ</th>
                    <th scope="col">GÖNDERİ</th>
                    <th scope="col">YORUM YAPAN</th>
                    <th scope="col">YORUM</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Post.Category.Name</td>
                        <td>@item.Post.Title</td>
                        <td>@item.Kullanici.Name @item.Kullanici.LastName</td>
                        <td>@item.CommentBody</td>
                        <td><a href="/Admin/Category/Guncelle/@item.Id" class="btn btn-primary btn-block">Güncelle</a></td>
                        <td><a href="/Admin/Category/Sil/@item.Id" class="btn btn-primary btn-block">Sil</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>