@model MVC.Blog.DAL.Data.Post

<div class="kt-mainpanel">
    <div class="kt-pagebody">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Gönderiler</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label class="form-control-label col-md-2">Başlık:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-control-label col-md-2">İçerik:</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.PostBody, 10, 100, new { @class = "form-control", @id = "summernote" })
                        @Html.ValidationMessageFor(model => model.PostBody, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-control-label col-md-2">Gönderi Tarihi:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PostDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PostDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-control-label col-md-2">Açıklama:</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description, 10, 20, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.Hidden("UserId",1,new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-control-label col-md-2">Kategori:</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.CategoryId, new SelectList(ViewBag.Kategoriler, "Value", "Text"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-control-label col-md-2">Özet:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-control-label col-md-2">Etiketler:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Tags, new { @class = "bootstrap-tagsinput", @type = "text", @data_role = "tagsinput" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-control-label col-md-2">Durum:</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.StatusId, new SelectList(ViewBag.Durum, "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Güncelle" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section scripts{
    <script>
        $(function () {
            'use strict';

            // Inline editor
            var editor = new MediumEditor('.editable');

            // Summernote editor
            $('#summernote').summernote({
                height: 150,
                tooltip: false
            })
        });
    </script>
}
